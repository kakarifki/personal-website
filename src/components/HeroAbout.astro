  { href: "https://github.com/kakarifki", icon: "fab fa-github", label: "GitHub" },
  { href: "https://www.linkedin.com/in/muhammadrifkiseptiawan11", icon: "fab fa-linkedin", label: "LinkedIn" },
  { href: "https://www.instagram.com/rifkiseptiawan", icon: "fab fa-instagram", label: "Instagram" },
];

const highlights = [
  { icon: "fas fa-code", text: "Software Engineer" },
  { icon: "fas fa-graduation-cap", text: "Bootcamp Graduate" },
  { icon: "fas fa-location-dot", text: "Based in Bekasi" },
];

const fonts = ['Arial', 'Georgia', 'Courier New', 'Times New Roman', 'Verdana', 'Tahoma', 'Lucida Console'];
---

<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden py-20 bg-slate-950">
  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Greeting -->
      <p class="text-sky-500 text-lg md:text-xl font-medium mb-4 tracking-wider uppercase">
        Hello, I'm
      </p>
      
      <!-- Name with Dynamic Font Effect -->
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-6 text-white">
        <span id="dynamic-font" class="cursor-pointer select-none text-sky-500">Rifki</span>
        <span> Septiawan</span>
      </h1>
      
      <!-- Highlights (Integrated from About) -->
      <div class="flex flex-wrap justify-center gap-4 mb-10">
        {highlights.map((item) => (
          <div class="flex items-center gap-2 px-4 py-2 rounded-full bg-slate-900 border border-slate-800 transition-transform hover:scale-105 hover:border-sky-500/50">
            <i class={`${item.icon} text-sky-500`}></i>
            <span class="text-gray-300 text-sm md:text-base font-medium">{item.text}</span>
          </div>
        ))}
      </div>

      <!-- Bio (Merged Content) -->
      <div id="about" class="bg-slate-900 rounded-2xl p-8 mb-10 text-gray-300 leading-relaxed max-w-3xl mx-auto border border-slate-800 scroll-mt-32">
         <p class="text-lg md:text-xl mb-4 font-medium text-white">
            From <span class="text-sky-500">curiosity</span> to <span class="text-sky-500">code</span>.
         </p>
         <p class="mb-4">
            Started taking apart computers in middle school, now I build digital solutions.
            Graduated from <span class="text-sky-500 font-semibold">Bearmentor.com</span> bootcamp, 
            crafting digital experiences with passion and precision.
         </p>
         <p class="text-gray-400 text-sm md:text-base">
            I believe in continuous learning and building solutions that matter.
            Ready to build and innovate.
         </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
        <a 
          href="#projects" 
          class="group px-8 py-4 bg-white text-slate-950 font-bold rounded-full hover:bg-gray-200 transition-all duration-300 hover:-translate-y-1"
        >
          View My Work
          <span class="inline-block ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
        </a>
        <a 
          href="mailto:rifkim91@gmail.com" 
          class="px-8 py-4 bg-transparent border border-slate-700 text-white font-semibold rounded-full hover:bg-slate-800 transition-all duration-300 hover:-translate-y-1"
        >
          Get In Touch
        </a>
      </div>

      <!-- Social Links -->
      <div class="flex items-center justify-center gap-6">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.label}
            class="w-12 h-12 flex items-center justify-center rounded-full bg-slate-900 border border-slate-800 text-gray-400 hover:text-white hover:border-sky-500 transition-all duration-300 hover:-translate-y-1"
          >
            <i class={`${link.icon} text-xl`}></i>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Scroll Indicator (Pointing to Experience) -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <a href="#experience" class="text-gray-500 hover:text-white transition-colors" aria-label="Scroll to experience section">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<script define:vars={{ fonts }}>
  let intervalId;
  const element = document.getElementById('dynamic-font');
  
  function changeFontRandomly() {
    if (element) {
      const randomFont = fonts[Math.floor(Math.random() * fonts.length)];
      element.style.fontFamily = randomFont;
    }
  }
  
  function startAnimation() {
    intervalId = setInterval(changeFontRandomly, 300);
  }
  
  function stopAnimation() {
    clearInterval(intervalId);
    if (element) {
      element.style.fontFamily = '"Exo 2", sans-serif';
    }
  }
  
  startAnimation();
  
  element?.addEventListener('mouseover', stopAnimation);
  element?.addEventListener('mouseout', startAnimation);
</script>
