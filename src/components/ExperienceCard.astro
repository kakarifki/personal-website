---
interface Props {
  title: string;
  company: string;
  period: string;
  responsibilities: string[];
}

const { title, company, period, responsibilities } = Astro.props;
---

<div class="glass rounded-2xl p-6 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
  <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2 mb-4">
    <div>
      <h3 class="text-xl font-bold text-white">{title}</h3>
      <p class="text-[#f1b814] font-semibold">{company}</p>
    </div>
    <span class="text-gray-400 text-sm bg-white/5 px-3 py-1 rounded-full w-fit">{period}</span>
  </div>
  
  <ul class="space-y-2">
    {responsibilities.map((item) => (
      <li class="flex items-start gap-3 text-gray-300">
        <i class="fas fa-check text-[#f1b814] mt-1 text-sm"></i>
        <span>{item}</span>
      </li>
    ))}
  </ul>
</div>
